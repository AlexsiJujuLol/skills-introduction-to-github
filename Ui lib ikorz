local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local VirtualInputManager = game:GetService("VirtualInputManager")

local LocalPlayer = Players.LocalPlayer

-- Blur Effect
local BlurEffect = Instance.new("BlurEffect")
BlurEffect.Size = 0
BlurEffect.Parent = Lighting

-- Screen GUI
local ScreenGui = Instance.new("ScreenGui", gethui and gethui() or LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "CompleteUI"
ScreenGui.ResetOnSpawn = false

-- Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 500, 0, 300)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BackgroundTransparency = 0.2
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

local MainCorner = Instance.new("UICorner")
MainCorner.CornerRadius = UDim.new(0, 10)
MainCorner.Parent = MainFrame

-- Sidebar
local Sidebar = Instance.new("Frame")
Sidebar.Size = UDim2.new(0, 120, 1, 0)
Sidebar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Sidebar.BackgroundTransparency = 0.3
Sidebar.BorderSizePixel = 0
Sidebar.Parent = MainFrame

local SidebarCorner = Instance.new("UICorner")
SidebarCorner.CornerRadius = UDim.new(0, 10)
SidebarCorner.Parent = Sidebar

-- Content Frame
local ContentFrame = Instance.new("Frame")
ContentFrame.Size = UDim2.new(1, -120, 1, 0)
ContentFrame.Position = UDim2.new(0, 120, 0, 0)
ContentFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
ContentFrame.BackgroundTransparency = 0.25
ContentFrame.BorderSizePixel = 0
ContentFrame.Parent = MainFrame

local ContentCorner = Instance.new("UICorner")
ContentCorner.CornerRadius = UDim.new(0, 10)
ContentCorner.Parent = ContentFrame

-- Close Button
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 50, 0, 25)
CloseButton.Position = UDim2.new(1, -60, 0, 10)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Font = Enum.Font.SourceSansBold
CloseButton.TextSize = 18
CloseButton.Parent = MainFrame

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(0, 5)
CloseCorner.Parent = CloseButton

-- Function to Create Tabs
local function createTab(name)
    local TabButton = Instance.new("TextButton")
    TabButton.Size = UDim2.new(1, -10, 0, 40)
    TabButton.Position = UDim2.new(0, 5, 0, (#Sidebar:GetChildren() - 1) * 45)
    TabButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabButton.Font = Enum.Font.SourceSansBold
    TabButton.TextSize = 16
    TabButton.Text = name
    TabButton.Parent = Sidebar

    local TabContent = Instance.new("Frame")
    TabContent.Size = UDim2.new(1, 0, 1, 0)
    TabContent.BackgroundTransparency = 1
    TabContent.Visible = false
    TabContent.Parent = ContentFrame

    TabButton.MouseButton1Click:Connect(function()
        for _, child in pairs(ContentFrame:GetChildren()) do
            if child:IsA("Frame") then
                child.Visible = false
            end
        end
        TabContent.Visible = true
    end)

    return TabContent
end

-- Auto Parry Tab
local AutoParryTab = createTab("Auto Parry")
local AutoParryButton = Instance.new("TextButton")
AutoParryButton.Size = UDim2.new(0, 200, 0, 50)
AutoParryButton.Position = UDim2.new(0.5, 0, 0.3, 0)
AutoParryButton.AnchorPoint = Vector2.new(0.5, 0.5)
AutoParryButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
AutoParryButton.Text = "Auto Parry: OFF"
AutoParryButton.TextColor3 = Color3.fromRGB(255, 255, 255)
AutoParryButton.Font = Enum.Font.SourceSansBold
AutoParryButton.TextSize = 18
AutoParryButton.Parent = AutoParryTab

local AutoParryEnabled = false
local AutoParryConnection

-- Function to Detect Ball
local function getBall()
    local ballContainer = workspace:FindFirstChild("Balls")
    if ballContainer then
        for _, ball in pairs(ballContainer:GetChildren()) do
            if not ball.Anchored then
                return ball
            end
        end
    end
    return nil
end

-- Check if Ball is Within Parry Range
local function isBallInRange(ball)
    local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if hrp and ball then
        local distance = (hrp.Position - ball.Position).Magnitude
        return distance <= 20 -- Adjust the range as needed
    end
    return false
end

-- Auto Parry Logic
local function attemptParry()
    local ball = getBall()
    if ball and isBallInRange(ball) then
        VirtualInputManager:SendMouseButtonEvent(0, 0, 0, true, game, 0)
        VirtualInputManager:SendMouseButtonEvent(0, 0, 0, false, game, 0)
    end
end

-- Enable/Disable Auto Parry
AutoParryButton.MouseButton1Click:Connect(function()
    AutoParryEnabled = not AutoParryEnabled
    AutoParryButton.Text = AutoParryEnabled and "Auto Parry: ON" or "Auto Parry: OFF"

    if AutoParryEnabled then
        AutoParryConnection = RunService.Heartbeat:Connect(attemptParry)
    else
        if AutoParryConnection then
            AutoParryConnection:Disconnect()
            AutoParryConnection = nil
        end
    end
end)

-- Close Button Logic
CloseButton.MouseButton1Click:Connect(function()
    if AutoParryConnection then
        AutoParryConnection:Disconnect()
    end

    TweenService:Create(MainFrame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
    TweenService:Create(BlurEffect, TweenInfo.new(0.5), {Size = 20}):Play()

    wait(0.5)
    ScreenGui:Destroy()
    BlurEffect:Destroy()
end)
